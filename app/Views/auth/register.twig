{% extends 'layouts/app.twig' %}

{% block content %}

    <main class="auth-page" style="height: 100vh; width: 100%;">
        <div class="row m-0">
            <div class="col-6 col-md-6 p-0">
                <div class="img d-flex align-self-stretch align-items-center">
                    <img class="img-fluid" style="height:100vh;" src="images/bg_connection.jpg" id='connexion_image'  alt="">
                </div>
            </div>
            <div class="col-md-5 col-12 mt-5">
                <div class="row justify-content-start pt-5">
                    <div class="wrap-contact100 mt-4">
                        <form class="contact100-form validate-form" method="POST">
                            {{ form_token() }} 
                            {% if error %}
                               <h5 class="error">{{ error |raw  }}</h5> 
                            {% endif %}         
                            <div class="wrap-input100 validate-input">
                                <span class="label-input100">NOM</span>
                                <input id="lastname" type="text" class="input100 " name="lastname" value=""  autocomplete="lastname" autofocus="" placeholder="Votre Nom...">
                                <span class="focus-input100"></span>
                            </div>
                            <div class="wrap-input100 validate-input">
                                <span class="label-input100">Prenom</span>
                                <input class="input100" type="text" name="firstname" placeholder="Votre Prenom..." >
                                <span class="focus-input100"></span>
                            </div>
                            <div class="wrap-input100 validate-input">
                                <span class="label-input100">Email</span>
                                <input id="email" type="email" class="input100 " name="email" value=""  autocomplete="email" placeholder="Adresse Email ...">
                                <span class="focus-input100"></span>
                            </div>
                            <div class="wrap-input100 validate-input">
                                <span class="label-input100">Mot de passe</span>
                                <input type="password" class="input100 " name="password"  autocomplete="new-password" placeholder="Mot de passe">
                                <span class="focus-input100"></span>
                            </div>
                            <div class="wrap-input100 validate-input">
                                <span class="label-input100">Confirmation de mot passe</span>
                                <input class="input100" id="password-confirm" type="password" name="password_confirmation"  autocomplete="new-password" placeholder="Confirmation Mot de passe">
                                <span class="focus-input100"></span>
                            </div>
                            <div class="container-contact100-form-btn mt-3">
                                <button type="submit" class="button">S'INSCRIRE</button>
                            </div> 
                        </form>
                        <div class="text-center m-3">
                            <a id="link-cnx" href="/login">SE CONNECTER</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}